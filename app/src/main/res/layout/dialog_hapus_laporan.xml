<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_title"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Laporan"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_desc"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apakah anda yakin akan menghapus laporan?"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="15sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mb_hapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#C0C0C0"
            android:layout_marginRight="10dp"
            android:text="Cancel"
            android:id="@+id/mb_cancel">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#5B9DFF"
            android:text="Hapus"
            android:id="@+id/mb_hapus">
        </com.google.android.material.button.MaterialButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>