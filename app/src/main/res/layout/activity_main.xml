<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#5B9DFF"
                    android:paddingVertical="7dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/ib_menu"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/menu"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp">
                    </com.google.android.material.textview.MaterialTextView>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></View>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp"
                        android:layout_marginRight="15dp">
                        <ImageView
                            android:id="@+id/profileButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/nunu_twins"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#5B9DFF"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statika Keuntungan"
                            android:textColor="@color/white">
                        </com.google.android.material.textview.MaterialTextView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></View>
                        <Spinner
                            android:paddingRight="20dp"
                            style="@style/SpinnerTheme"
                            android:id="@+id/spinner_bulan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="400dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Rp. 2,350,000"
                            android:textStyle="bold"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:textSize="15dp"
                            android:text="Januari 2023"
                            android:textStyle="normal"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Shopee Food"
                            android:textStyle="italic"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></View>
                    <ImageButton
                        android:id="@+id/ib_delete1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/delete"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                    <ImageButton
                        android:id="@+id/ib_edit1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/edit"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Rp. 2,350,000"
                            android:textStyle="bold"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:textSize="15dp"
                            android:text="Januari 2023"
                            android:textStyle="normal"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Grab"
                            android:textStyle="italic"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></View>
                    <ImageButton
                        android:id="@+id/ib_delete"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/delete"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                    <ImageButton
                        android:id="@+id/ib_edit"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/edit"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Rp. 2.427.500"
                            android:textStyle="bold"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:textSize="15dp"
                            android:text="Februari 2023"
                            android:textStyle="normal"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Shopee Food"
                            android:textStyle="italic"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></View>
                    <ImageButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/delete"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                    <ImageButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/edit"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Rp. 2.427.500"
                            android:textStyle="bold"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:textSize="15dp"
                            android:text="Februari 2023"
                            android:textStyle="normal"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Grab"
                            android:textStyle="italic"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></View>
                    <ImageButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/delete"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                    <ImageButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/edit"
                        android:background="@drawable/transparent_background"
                        android:contentDescription="Deskripsi Ikon"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mfab_add_laporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/add_white"
            android:backgroundTint="#5B9DFF"
            android:elevation="6dp"
            app:fabSize="normal"
            app:shapeAppearanceOverlay="@style/FABShapeAppearance"
            app:tint="@color/white"
            app:rippleColor="@color/white" />
    </RelativeLayout>

</LinearLayout>

